{
  "name": "askdotmd",
  "displayName": "ask_dot_md",
  "version": "2.2.0",
  "description": "AI-powered coding assistant in your VSCode",
  "keywords": [
    "ai",
    "assistant",
    "Claude",
    "OpenAI",
    "code",
    "GPT",
    "LLM"
  ],
  "author": "Gabe DiFiore",
  "publisher": "gdifiore",
  "license": "GPL-3.0-only",
  "repository": {},
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "askdotmd.sendRequest",
        "title": "Ask.md: Send Request to LLM"
      },
      {
        "command": "askdotmd.configure",
        "title": "Ask.md: Configure"
      },
      {
        "command": "askdotmd.saveSystemPrompt",
        "title": "Ask.md: Save System Prompt"
      }
    ],
    "keybindings": [
      {
        "command": "askdotmd.sendRequest",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "askdotmd.sendRequest",
          "group": "z_commands",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "askdotmd.saveSystemPrompt",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Ask.md",
      "properties": {
        "askdotmd.defaultModel": {
          "type": "string",
          "default": "claude",
          "description": "Default model to use for requests"
        },
        "askdotmd.recentModels": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Recently used models"
        },
        "askdotmd.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Claude"
        },
        "askdotmd.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI"
        },
        "askdotmd.lmstudioApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LM Studio (optional for local instances)"
        },
        "askdotmd.claudeModel": {
          "type": "string",
          "default": "claude-3-5-sonnet-20241022",
          "description": "Claude model to use (e.g., claude-3-5-sonnet-20241022, claude-3-opus-20240229)"
        },
        "askdotmd.openaiModel": {
          "type": "string",
          "default": "gpt-4o",
          "description": "OpenAI model to use (e.g., gpt-4o, gpt-4-turbo, gpt-3.5-turbo)"
        },
        "askdotmd.lmstudioModel": {
          "type": "string",
          "default": "",
          "description": "Model name for LM Studio (leave empty to use LM Studio default)"
        },
        "askdotmd.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens to request from the API"
        },
        "askdotmd.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for response generation (higher = more creative, lower = more deterministic)"
        },
        "askdotmd.showContextInfo": {
          "type": "boolean",
          "default": true,
          "description": "Include file context information in requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "webpack": "webpack --mode production",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.12.11",
    "@types/vscode": "^1.89.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "debug": "^4.4.0"
  }
}
